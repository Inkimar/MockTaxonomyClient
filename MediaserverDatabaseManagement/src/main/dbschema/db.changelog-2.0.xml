<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
    
    <changeSet id="fake-taxon" author="ingimar">
        <createTable tableName="DUMMY_TAXON">
            <column name="ID" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="UNIQUE_ID" type="varchar(255)"/>
            <column name="COMMON_NAME" type="varchar(255)"/>
            <column name="SCIENTIFIC_NAME" type="varchar(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="fake-exif-dump" author="ingimar">
        <createTable tableName="DUMMY_IMAGE_EXIF_DATA">
            <column name="ID" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="IMAGE_UUID" type="varchar(255)"/>
            <column name="EXIF_JSON" type="longtext"/>
        </createTable>
    </changeSet>
